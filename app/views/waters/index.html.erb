<p id="notice"><%= notice %></p>

<h1>Waters</h1>

<table>
  <thead>
    <tr>
      <th>Measurement type</th>
      <th>Quantity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @waters.each do |water| %>
      <tr>
        <td>
            <%if water.measurement_type ==1 %>
                Cup
            <% elsif water.measurement_type == 2 %>
                ml
            <% end %>
        </td>
        <td><%= water.quantity %></td>
        <td><%= current_user.username %></td>
        <td><%= link_to 'Show', water %></td>
        <td><%= link_to 'Edit', edit_water_path(water) %></td>
        <td><%= link_to 'Destroy', water, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

