<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="ui middle aligned center aligned grid" style="margin-top: 10%">
      <div class="column">
        <h2 class="ui  header">
          <div class="content">
            Log-in to your account
          </div>
        </h2>
          <div class="ui stacked ">
            <div class="field">
              <div class="ui left icon input">
                <i class="user icon"></i>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'E-mail', class: 'input'%>
              </div>
            </div>
            <div class="field">
              <div class="ui left icon input">
                <i class="lock icon"></i>
                <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
              </div>
            </div>
            <div><%= f.submit "Log in", class:"ui teal submit button" %></div>
          </div>
        <div>
            <br><h4 class="">New to us? <a href="#"><%= link_to "Sign up", new_registration_path(resource_name) %></a></h4>
        </div>
      </div>
    </div>
<% end %>

