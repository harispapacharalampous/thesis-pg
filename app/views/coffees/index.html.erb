<p id="notice"><%= notice %></p>

<h1>Coffees</h1>

<table>
  <thead>
    <tr>
      <th>Measurement type</th>
      <th>Quantity</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @coffees.each do |coffee| %>
      <tr>
        <td>
            <%if coffee.measurement_type ==1 %>
                Cup
            <% elsif coffee.measurement_type == 2 %>
                ml
            <% end %>
        </td>
        <td><%= coffee.quantity %></td>
        <td><%= coffee.user.username %></td>
        <td><%= link_to 'Show', coffee %></td>
        <td><%= link_to 'Edit', edit_coffee_path(coffee) %></td>
        <td><%= link_to 'Destroy', coffee, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

